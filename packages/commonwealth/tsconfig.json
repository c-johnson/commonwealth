{
  "extends": "../../tsconfig.json",
  // "esm": true,
  "compilerOptions": {
    "jsx": "react",
    "skipLibCheck": true,
    "sourceMap": true,
    "rootDir": ".",
    "outDir": "build",
    "baseUrl": ".",
    "module": "ESNext",
    "esModuleInterop": true,
    "paths": {
      "@hicommonwealth/*": ["../../libs/*/src"],
      "*": ["./*", "shared/*", "client/scripts/*"]
    }
  },
  // "ts-node": {
  //   "esm": true
  // },
  "include": [
    "./client",
    "./shared",
    "./test",
    "./globals.d.ts",
    "./server",
    "./server.ts",
    "./scripts"
  ],
  "references": [
    { "path": "../../libs/adapters" },
    { "path": "../../libs/chains" },
    { "path": "../../libs/core" },
    { "path": "../../libs/model" }
  ]
}
